PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Postgres (used by docker-compose in infra/)
POSTGRES_USER=compliance
POSTGRES_PASSWORD=compliance
POSTGRES_DB=compliance

# Prisma / app
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/compliance?schema=public"


JWT_SECRET=your-jwt-secret-change-in-production

# List rules: whitelist required and action when not listed
WHITELIST_REQUIRED=false
WHITELIST_NON_LISTED_ACTION=REVIEW

# Threshold rules: per-currency limit (e.g. THRESHOLD_EUR, THRESHOLD_USD), action when exceeded
THRESHOLD_ACTION=REVIEW
THRESHOLD_EUR=10000
THRESHOLD_USD=12000
